<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/game_card"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:onClick="buttonLinkGame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:id="@+id/Game1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="5">

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="5"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:src="@drawable/game_poster" />

            <TextView
                android:id="@+id/game_text"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:minHeight="60dp"
                android:maxWidth="170dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="0dp"
                android:text="GAME TITLE"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/game_publisher"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="13sp"
                android:text="GAME PUBLISHER | YEAR" />

            <TextView
                android:id="@+id/game_advancement"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="13sp"
                android:text="GAME ADVANCEMENT" />

            <TextView
                android:id="@+id/game_score"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:text="3,7 / 5"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_sheet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#EEEEEE"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="buttonLinkGame"
                    android:text="Voir"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/move_game"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:padding="0dp"
                    android:backgroundTint="#EEEEEE"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="buttonMoveGameList"
                    android:text="â‡…"
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </LinearLayout>

        </GridLayout>

